{% extends 'base.html.twig' %}

{% block title %}Produits{% endblock %}
{% block stylesheets %}
<link rel="stylesheet" href="{{ asset('css/product.css') }}">
{% endblock %}


{% block content %}


<h1>Produits de la cat√©gorie {{ products[0].category.name ?? 'Inconnue' }}</h1>

<section class="product-list">
    {% for product in products %}
    <article>
        <a class="img-new-container" href="{{ path('app_product_show', {'id': product.id}) }}">
            <img src="{{ product.productImages[0].imageUrl }}" alt="product image" class="img-new"></a>
        <h2 class="title-new">{{ product.name }}</h2>
        <div class="btn-price-new-container">
            <h3 class="price-new">{{ product.price }}</h2>
                <a href="#" class="btn-new">Acheter</a>
        </div>
    </article>
    {% endfor %}
</section>

{% endblock %}