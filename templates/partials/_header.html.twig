        <ul class="menu-list">
            <i class="close-menu fa-solid fa-xmark"></i>
            <li><a href="{{ path('app_product_index') }}">Home</a></li>
            <li><a href="{{ path('app_category_index') }}">category</a></li>
            <li><a href="{{ path('app_brand_index') }}">brands</a></li>
        </ul>
        <select name="catag" id="catag">
          <option value="">Choisir une catégorie</option>
          {% for category in categories %}
            <option value="{{ path('product_by_category', {'id': category.id}) }}">
              {{ category.name }}
            </option>
          {% endfor %}
        </select>

        <div class="search">
          <input type="text" placeholder="Rechercher" />

          <div>
            <i class="fa-solid fa-magnifying-glass"></i>
          </div>

        </div>
      </div>
      <div class="lang-cart-user">
        <div class="flag-lang">
          <svg xmlns="http://www.w3.org/2000/svg" width="36" height="36" viewBox="0 0 36 36"><path fill="#ed2939" d="M36 27a4 4 0 0 1-4 4h-8V5h8a4 4 0 0 1 4 4z"/><path fill="#002495" d="M4 5a4 4 0 0 0-4 4v18a4 4 0 0 0 4 4h8V5z"/><path fill="#eee" d="M12 5h12v26H12z"/></svg>
